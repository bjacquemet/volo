extends layout

block content
  if messages.error
      .alert.alert-danger
        div= messages.error
    if messages.info
      .alert.alert-info
        div= messages.info
    if messages.success
      .alert.alert-success
        div= messages.success
  div.container-fluid
    div.row.row-centered
      div.col-md-10.col-md-offset-1.content
        div.col-md-12
          h1 Login Page
          p.lead Please login with creadentials.
          h4= info
          form(role='form', action="/login",method="post", class="col-md-5")
            .form-group
              input.form-control(type='text', name="username", placeholder='Enter Username')
            .form-group
              input.form-control(type='password', name="password", placeholder='Password')
            button.btn.btn-primary(type='submit') Submit