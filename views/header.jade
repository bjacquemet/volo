            div.navbar-collapse
              ul.nav.navbar-nav.navbar-right
                li
                  a(href="/login", class="navbar-link") Login
                li
                  a(href="/register", class="navbar-link") Register
          if (user)
            div.navbar-collapse
              ul.nav.navbar-nav.navbar-right
                li.user.col-md-12
                  img(src="/images/placeholder.png") 
                  p.text-right 
                    |Welcome #{user.username}
                    br
                    a(href="/logout") Logout
          div.navbar-collapse.collapse#navbar
            ul.nav.navbar-nav.navbar-right
              li
                a(href="volunteer") Volunteer
              li
                a(href="nonprofit") Nonprofit
