extends layout

block content

  script(src="/javascripts/bootstrap-formhelpers-phone.js")
  script(src="/javascripts/bootstrap-formhelpers-countries.js")
  script(src="/javascripts/Chart.js")
  script(src="/javascripts/goal.js")  

  div.container-fluid
    .col-md-7.col-md-offset-1
      div.row.row-centered
        .col-md-12
          .col-md-12.content
            .col-md-2.user-bg
              img(src="/images/placeholder.png")
            .col-md-7
              h3
                a(href="#", id="f_name", data-type="text", data-pk="f_name", data-url="#", data-title="Enter first name") John 
                a(href="#", id="l_name", data-type="text", data-pk="l_name", data-url="#", data-title="Enter last name") Doe
                img(src="/images/male.svg", class="ico")
              p.date 
                a(href="#", id="birthdate", data-value="1990-05-14", data-type="combodate", data-pk="birthdate", data-url="#", data-title="Enter your birth date")
            .col-md-12
            .col-md-6.info
              p Email: <em>john.doe@gmail.com</em>
              p Phone: <em>555-555-555</em>
              p Current position: <em>Student at Oxford University</em>
              p Accumulated hours: <em>620</em>
            .col-md-5.col-md-offset-1.info
              p Home: <br/>
              |<em>London W1F 9AG, UK</em>

      
      div.row.row-centered
        .col-md-12
          .col-md-12.content.skills
            .col-md-12
              h2 Skills

            .col-md-12
              .col-md-7.bar(style="background-color:#666")
                span Web development
              .clearfix
              .col-md-5.bar(style="background-color:#888")
                span Marketing
              .clearfix
              .col-md-4.bar(style="background-color:#aaa")
                span Communication
              .clearfix
              .col-md-3.bar(style="background-color:#ccc")
                span Social Media
              
      div.row.row-centered
        .col-md-12
          .col-md-12.content.XP
            .col-md-12
              h2 Experiences

            .col-md-12.XP_form 
              h3 Add an experience to your volunteer profile
              form(action="#")
                h4 Nonprofit
                .form-group.col-md-12
                  label.col-md-3.text-right(for="nonprofit") Nonprofit name *
                  input.col-md-8(name="nonprofit", input="text", required)
                .form-group.col-md-12
                  label.col-md-3.text-right(for="description") Description of your experience
                  textarea.col-md-8(name="description", rows="2")

                h4 Activity
                .form-group.col-md-12
                  label.col-md-3.text-right(for="role") Role
                  input.col-md-8(id="role", name="role", type="text", required)
                .form-group.col-md-12
                  label.col-md-3.text-right(for="skills") Skills developed
                  input.col-md-8(id="skills", name="skills", type="text", required)

                .form-group.col-md-12
                  label.col-md-3.text-right(for="hours") Number of hours
                  input.col-md-8(name="hours", type="number", required)
                .form-group.col-md-12
                  label.col-md-3.text-right(for="s_date") Dates
                  .col-md-8.nopadding
                    span.col-md-3.nopadding From *: 
                    input.col-md-9.nopadding(name="s_date", type="date", required)
                    br
                    span.col-md-3.nopadding To: 
                    input.col-md-9.nopadding(name="e_date", type="date")

                h4 Referee
                p 
                  |Please enter the name and contact details of someone involved in your project who can confirm what you do there.
                  |This person should be aged 18 or over, and you must ask their permission before giving us their details.
                .form-group.col-md-12
                  label.col-md-3.text-right(for="referee_name") Refereee name *
                  input.col-md-8(name="referee_name", type="text", required)
                .form-group.col-md-12
                  label.col-md-3.text-right(for="referee_email") Refereee email *
                  input.col-md-8(name="referee_email", type="email", required)
                .form-group.col-md-12
                  label.col-md-3.text-right(for="referee_phone") Refereee phone number *
                  input.col-md-8.bfh-phone(name="referee_phone", required, type="text", data-format="+44 - dddddddddd")

                h4 Feedback
                .form-group.col-md-12
                  label.col-md-3.text-right(for="feedback") Do you wish to give a feedback to the nonprofit?
                  textarea.col-md-8(name="feedback", rows="2")                

                .form-group.col-md-12.text-center
                  input(type="submit", value="Add experience", class="btn primary sharp")

            .col-md-12
              p.charity_name British Red Cross
              p <em>April 2014 - September 2014. ~ 120 hours volunteered</em>
              p During these 5 months of volunteering, I lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim.
              p <u>1 recommendation</u>
              
              h5 Roles
              .col-md-6.role
                .col-md-12.grey_background
                  p Role: <em>Web Developper</em>
                  p Skills: <em>autonomy, rigour, web development</em>
                  p <em>50 hours</em>
              .col-md-6.role
                .col-md-12.grey_background
                  p Role: <em>Events volunteer</em>
                  p Skills: <em>organization, logistics</em>
                  p <em>70 hours</em>

              .col-md-6.role
                .col-md-12.grey_background.add_role.text-center
                  span.add_new Add new role
                  form(action="#", class="role_form col-md-12 height-0")
                    h3 Add new role
                    h4 Activity
                    .form-group.col-md-12
                      label.col-md-4.text-right(for="role") Role
                      input.col-md-6(id="role", name="role", type="text", required)
                    .form-group.col-md-12
                      label.col-md-4.text-right(for="skills") Skills developed
                      input.col-md-6(id="skills", name="skills", type="text", required)

                    .form-group.col-md-12
                      label.col-md-4.text-right(for="hours") Number of hours
                      input.col-md-6(name="hours", type="number", required)
                    .form-group.col-md-12
                      label.col-md-4.text-right(for="s_date") Dates
                      .col-md-6.nopadding
                        span.col-md-3.nopadding From *: 
                        input.col-md-9.nopadding(name="s_date", type="date", required)
                        br
                        span.col-md-3.nopadding To: 
                        input.col-md-9.nopadding(name="e_date", type="date")

                    h4 Referee
                    p 
                      |Please enter the name and contact details of someone involved in your project who can confirm what you do there. 
                      |This person should be aged 18 or over, and you must ask their permission before giving us their details.
                    .form-group.col-md-12
                      input(name="nonprofit_id", value="", type="hidden")
                      label.col-md-4.text-right(for="referee_name") Refereee name *
                      input.col-md-6(name="referee_name", type="text", required)
                    .form-group.col-md-12
                      label.col-md-4.text-right(for="referee_email") Refereee email *
                      input.col-md-6(name="referee_email", type="email", required)
                    .form-group.col-md-12
                      label.col-md-4.text-right(for="referee_phone") Refereee phone number *
                      input.col-md-6.bfh-phone(name="referee_phone", required, type="text", data-format="+44 - dddddddddd")

                    h4 Feedback
                    .form-group.col-md-12
                      label.col-md-4.text-right(for="feedback") Do you wish to give a feedback to the nonprofit?
                      textarea.col-md-6(name="feedback", rows="4")                

                    .form-group.col-md-12.text-center
                      input(type="submit", value="Add experience", class="btn primary sharp")


                  

            .separator.col-md-2.col-md-offset-5
            
            .col-md-12
              p.charity_name ABL Health
              p <em>February 2012 - September 2013. ~ 500 hours volunteered</em>
              p I volunteered for 1.5 years in lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim.
              p Skills: <em>autonomy, rigour, communication</em>
              
            .col-md-12.add
              a(href="#", id="addXP")
                p.text-center Add experience
      
      //- .row.row-centered.XP_form
      //-   .col-md-12
      //-     .col-md-12.content
      //-       form(action="#")
      //-         .form-group
      //-           label(for="charity")
      //-           input(name="charity", input="text")
      //-         .form-group
      //-           label(for="")
      

      .row.row-centered
        .col-md-12
          .col-md-12.content
            .col-md-12
              h2 Recommendations

            .col-md-1.user-md
              img(src="/images/placeholder.png")
            .col-md-10
              p.manager_name Tom Scott - Red Cross London
              img(src="/images/stars.svg", width="100px")
              p During these 5 months of volunteering, John has been I lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam.
    
    .col-md-3
      div.row.row-centered
        .col-md-12.content
          .col-md-12
            h2 Goals
            
            h5 Total hours volunteered
            canvas(id="g_goal", height="280px", width="80px")

            h5 Hours volunteered <em>this week</em>
            canvas(id="w_goal", height="230px")
            p You've reached your weekly goal!! <em>
              a(href="#") Share it </em>

  script.
    //- $.fn.editable.defaults.mode = 'inline';
    $(document).ready(function() {
        $('#f_name').editable();
        $('#l_name').editable();
        $('#birthdate').editable({
          format: 'YYYY-MM-DD',    
          viewformat: 'DD/MM/YYYY',    
          template: 'D / MMMM / YYYY',    
          combodate: {
                maxYear: 1999, 
                minYear: 1920
           }
        });
        $('#addXP').on('click', function(){
          $(".XP_form").fadeIn();
          $('html, body').animate({
                  scrollTop: $(".XP").offset().top
              }, "slow");
        });
        $(".add_role").on('click', function(){
          $(".add_new").hide().addClass('hide_it');
          $(".role_form").show().addClass('height-auto').parent().removeClass('text-center').addClass('no-hover').parent().switchClass("col-md-6", "col-md-12", 500 );
        });
    });



